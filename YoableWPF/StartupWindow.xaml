<Window x:Class="YoableWPF.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Yoable - Get Started"
        Width="900" 
        Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="800"
        MinHeight="650">

    <Window.Resources>
        <!-- Hero Section Style -->
        <Style x:Key="HeroText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Subtitle Style -->
        <Style x:Key="SubtitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>

        <!-- Project Card Style -->
        <Style x:Key="ProjectCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#19FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Large Action Button -->
        <Style x:Key="LargeActionButton" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="32,16"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Center">
                                <TextBlock x:Name="Icon"
                                         FontFamily="Segoe MDL2 Assets"
                                         FontSize="20"
                                         VerticalAlignment="Center"
                                         Margin="0,0,12,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Action Button -->
        <Style x:Key="SecondaryActionButton" TargetType="Button" BasedOn="{StaticResource LargeActionButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#33FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Text Link Style -->
        <Style x:Key="TextLink" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF0078D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="Text" 
                                 Text="{TemplateBinding Content}"
                                 Foreground="{TemplateBinding Foreground}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Text" Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Padding="40,32">
            <Border.Background>
                <SolidColorBrush Color="#19FFFFFF"/>
            </Border.Background>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <!-- App Icon using Segoe MDL2 Assets -->
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                             Text="&#xE8B7;" 
                             FontSize="48"
                             Foreground="#FF9C27B0"
                             VerticalAlignment="Center"
                             Margin="0,0,16,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Yoable" 
                                 Style="{StaticResource HeroText}"/>
                        <TextBlock Text="Object Detection Labeling Tool" 
                                 Style="{StaticResource SubtitleText}"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="Version 3.0.1"
                         FontSize="11"
                         Foreground="Gray"
                         Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="40,20">
            <StackPanel>
                <!-- Recent Projects Section -->
                <StackPanel x:Name="RecentProjectsPanel">
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="RECENT PROJECTS" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="Gray"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Recent Projects List -->
                    <ItemsControl x:Name="RecentProjectsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ProjectCard}"
                                      MouseLeftButtonDown="ProjectCard_Click"
                                      Tag="{Binding ProjectPath}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Project Icon -->
                                        <Border Grid.Column="0"
                                              Background="#4400BCD4"
                                              CornerRadius="6"
                                              Width="48"
                                              Height="48"
                                              Margin="0,0,16,0">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                     Text="&#xE8B7;"
                                                     FontSize="24"
                                                     Foreground="#00BCD4"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Project Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ProjectName}"
                                                     FontSize="16"
                                                     FontWeight="SemiBold"
                                                     Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding ProjectPath}"
                                                     FontSize="11"
                                                     Foreground="Gray"
                                                     TextTrimming="CharacterEllipsis"
                                                     Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding LastOpenedText}"
                                                     FontSize="11"
                                                     Foreground="#00BCD4"/>
                                        </StackPanel>

                                        <!-- Arrow Icon -->
                                        <TextBlock Grid.Column="2"
                                                 FontFamily="Segoe MDL2 Assets"
                                                 Text="&#xE76C;"
                                                 FontSize="16"
                                                 Foreground="Gray"
                                                 VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <Border x:Name="EmptyStatePanel"
                          Style="{StaticResource ProjectCard}"
                          Background="Transparent"
                          BorderThickness="2"
                          Visibility="Collapsed">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#33FFFFFF"/>
                        </Border.BorderBrush>
                        <StackPanel HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Margin="32">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                     Text="&#xE8B7;"
                                     FontSize="48"
                                     Foreground="Gray"
                                     HorizontalAlignment="Center"
                                     Opacity="0.5"
                                     Margin="0,0,0,16"/>
                            <TextBlock Text="No recent projects"
                                     FontSize="16"
                                     Foreground="Gray"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,8"/>
                            <TextBlock Text="Create a new project or open an existing one to get started"
                                     FontSize="13"
                                     Foreground="Gray"
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Action Buttons -->
                <Grid Margin="0,32,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                          x:Name="NewProjectButton"
                          Content="New Project"
                          Click="NewProject_Click"
                          Style="{StaticResource LargeActionButton}"
                          HorizontalAlignment="Stretch">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                      Background="{TemplateBinding Background}"
                                      CornerRadius="6"
                                      Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal" 
                                              HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                 Text="&#xE710;"
                                                 FontSize="20"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,12,0"/>
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2"
                          x:Name="OpenProjectButton"
                          Content="Open Project"
                          Click="OpenProject_Click"
                          Style="{StaticResource SecondaryActionButton}"
                          HorizontalAlignment="Stretch">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                      Background="{TemplateBinding Background}"
                                      CornerRadius="6"
                                      Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal" 
                                              HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                 Text="&#xE8E5;"
                                                 FontSize="20"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,12,0"/>
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#44FFFFFF"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Padding="40,16">
            <Border.Background>
                <SolidColorBrush Color="#19FFFFFF"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#0FFFFFFF"/>
            </Border.BorderBrush>
            <Border.BorderThickness>0,1,0,0</Border.BorderThickness>
            <Grid>
                <Button x:Name="ContinueWithoutProjectButton"
                      Content="Continue Without Project"
                      Click="ContinueWithoutProject_Click"
                      Style="{StaticResource TextLink}"
                      HorizontalAlignment="Left"/>
            </Grid>
        </Border>
    </Grid>
</Window>