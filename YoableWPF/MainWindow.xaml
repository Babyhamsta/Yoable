<Window
    x:Class="YoableWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:local="clr-namespace:YoableWPF"
    ui:WindowHelper.UseModernWindowStyle="True"
    Title="{DynamicResource MainWindow_Title}"
    WindowStyle="None"
    ResizeMode="CanResize"
    Height="700" 
    Width="1100"
    WindowStartupLocation="CenterScreen"
    KeyDown="Window_KeyDown"
    PreviewMouseWheel="Window_PreviewMouseWheel"
    Closing="Window_Closing">

    <Window.Resources>
        <!-- Accent Brush -->
        <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource SystemAccentColor}"/>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Card Style -->
        <Style x:Key="StatusCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.2" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <!-- Image List Item Style -->
        <Style x:Key="ImageListItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" 
                                Background="Transparent"
                                CornerRadius="6"
                                Padding="10,8"
                                Margin="0,1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Collapsible Panel Button Style -->
        <Style x:Key="CollapsePanelButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Icon Button Style for Edit -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="240"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Grid.ColumnSpan="3" Padding="4,2">
            <MenuItem Header="{DynamicResource Menu_Project}">
                <MenuItem Header="{DynamicResource Menu_NewProject}" Click="NewProject_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                   Text="&#xE710;" 
                                   FontSize="16" 
                                   Foreground="#FF9C27B0"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_OpenProject}" Click="OpenProject_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                   Text="&#xE8E5;" 
                                   FontSize="16" 
                                   Foreground="#4CAF50"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{DynamicResource Menu_SaveProject}" Click="SaveProject_Click" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                   Text="&#xE74E;" 
                                   FontSize="16" 
                                   Foreground="#2196F3"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_SaveProjectAs}" Click="SaveProjectAs_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                   Text="&#xE792;" 
                                   FontSize="16" 
                                   Foreground="#2196F3"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{DynamicResource Menu_CloseProject}" Click="CloseProject_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                   Text="&#xE711;" 
                                   FontSize="16" 
                                   Foreground="#F44336"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_File}">
                <MenuItem Header="{DynamicResource Menu_ImportDirectory}" Click="ImportDirectory_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B7;" FontSize="16" Foreground="#FF9C27B0"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_ImportLabelsAndImage}" Click="ImportLabelsAndImage_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A5;" FontSize="16" Foreground="#FF00BCD4"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_ImportImage}" Click="ImportImage_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEB9F;" FontSize="16" Foreground="#FF4CAF50"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_ImportLabels}" Click="ImportLabels_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8E5;" FontSize="16" Foreground="#FF2196F3"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_YoutubeToImages}" Click="YTToImage_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE714;" FontSize="16" Foreground="#FFF44336"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_ExportLabels}" Click="ExportLabels_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEDE1;" FontSize="16" Foreground="#FFFF9800"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_ClearAll}" Click="ClearAll_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="16" Foreground="#FFF44336"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_AI}">
                <MenuItem Header="{DynamicResource Menu_ManageModels}" Click="ManageModels_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE950;" FontSize="16" Foreground="#FF9C27B0"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{DynamicResource Menu_AutoLabelImages}" Click="AutoLabelImages_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FE;" FontSize="16" Foreground="#FF00BCD4"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{DynamicResource Menu_AutoSuggestLabels}" Click="AutoSuggestLabels_Click">
                    <MenuItem.Icon>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA80;" FontSize="16" Foreground="#FF3F51B5"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Settings}" x:Name="SettingsMenuItem" Click="SettingsMenuItem_Click">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE115;" FontSize="16" Foreground="#FF607D8B"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>

        <!-- Left Panel - Images List -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{DynamicResource Main_Images}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Sort and Filter Controls -->
                <Border Grid.Row="1" 
                        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Sort Controls -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" 
                                        Orientation="Horizontal" 
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0">
                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                           Text="&#xE8CB;" 
                                           FontSize="12"
                                           Foreground="#FFFF9800"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource Main_Sort}" 
                                           FontSize="11" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Opacity="0.8"/>
                            </StackPanel>

                            <ComboBox Grid.Column="1"
                                      x:Name="SortComboBox" 
                                      SelectedIndex="0"
                                      SelectionChanged="SortComboBox_SelectionChanged"
                                      FontSize="11"
                                      HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="{DynamicResource Main_SortByName}"/>
                                <ComboBoxItem Content="{DynamicResource Main_SortByStatus}"/>
                            </ComboBox>
                        </Grid>

                        <!-- Separator -->
                        <Rectangle Grid.Row="1" 
                                   Height="1" 
                                   Fill="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                   Opacity="0.2"
                                   Margin="0,4"/>

                        <!-- Filter Controls -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" 
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0">
                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                           Text="&#xE71C;" 
                                           FontSize="12"
                                           Foreground="#FF3F51B5"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource Main_Filter}" 
                                           FontSize="11" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Opacity="0.8"/>
                            </StackPanel>

                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        x:Name="FilterAllButton"
                                        Content="{DynamicResource Main_FilterAll}"
                                        Click="FilterAll_Click"
                                        FontSize="10"
                                        FontWeight="SemiBold"
                                        Padding="4,6"
                                        Margin="0,0,1,0"
                                        HorizontalAlignment="Stretch"
                                        Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                                <Button Grid.Column="1"
                                        x:Name="FilterReviewButton"
                                        Content="{DynamicResource Main_FilterReview}"
                                        Click="FilterReview_Click"
                                        FontSize="10"
                                        FontWeight="SemiBold"
                                        Padding="4,6"
                                        Margin="0,0,1,0"
                                        HorizontalAlignment="Stretch"
                                        Background="#44FFB74D"
                                        Foreground="#FFB74D"
                                        BorderThickness="0"/>
                                <Button Grid.Column="2"
                                        x:Name="FilterNoLabelButton"
                                        Content="{DynamicResource Main_FilterNone}"
                                        Click="FilterNoLabel_Click"
                                        FontSize="10"
                                        FontWeight="SemiBold"
                                        Padding="4,6"
                                        Margin="0,0,1,0"
                                        HorizontalAlignment="Stretch"
                                        Background="#44E57373"
                                        Foreground="#E57373"
                                        BorderThickness="0"/>
                                <Button Grid.Column="3"
                                        x:Name="FilterVerifiedButton"
                                        Content="{DynamicResource Main_FilterDone}"
                                        Click="FilterVerified_Click"
                                        FontSize="10"
                                        FontWeight="SemiBold"
                                        Padding="4,6"
                                        Margin="0"
                                        HorizontalAlignment="Stretch"
                                        Background="#4481C784"
                                        Foreground="#81C784"
                                        BorderThickness="0"/>
                            </Grid>
                        </Grid>

                        <!-- Class Filter Expander -->
                        <Expander Grid.Row="3" 
                                  x:Name="ClassFilterExpander"
                                  Header="{DynamicResource Main_FilterByClass}"
                                  Margin="0,8,0,0"
                                  IsExpanded="False">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                                   Text="&#xE8C8;" 
                                                   FontSize="12"
                                                   Foreground="#FF9C27B0"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding}" 
                                                   FontSize="11" 
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                                <StackPanel x:Name="ClassFilterCheckBoxPanel" Orientation="Vertical">
                                    <!-- Checkboxes will be added dynamically -->
                                </StackPanel>
                            </ScrollViewer>
                        </Expander>
                    </Grid>
                </Border>

                <!-- Image List Card -->
                <Border Grid.Row="2" Style="{StaticResource ModernCard}" Padding="0" Margin="0">
                    <ListBox x:Name="ImageListBox" 
                             Style="{StaticResource ModernListBox}"
                             SelectionMode="Single" 
                             SelectionChanged="ImageListBox_SelectionChanged"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             ScrollViewer.IsDeferredScrollingEnabled="True">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource ImageListItemStyle}"/>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Filename -->
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding FileName}" 
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,0,8,0"/>

                                    <!-- Status Badge -->
                                    <Border Grid.Column="1" 
                                            CornerRadius="10" 
                                            Padding="8,4"
                                            BorderThickness="0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="NoLabel">
                                                        <Setter Property="Background" Value="#FFE57373"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="VerificationNeeded">
                                                        <Setter Property="Background" Value="#FFFFB74D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                        <Setter Property="Background" Value="#FF81C784"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <TextBlock FontSize="10" FontWeight="Bold" Foreground="White">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="NoLabel">
                                                            <Setter Property="Text" Value="{DynamicResource Main_StatusNoLabel}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="VerificationNeeded">
                                                            <Setter Property="Text" Value="{DynamicResource Main_StatusReview}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                            <Setter Property="Text" Value="{DynamicResource Main_StatusVerified}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Status Summary Card -->
                <Border Grid.Row="3" 
                        Style="{StaticResource ModernCard}" 
                        Padding="0"
                        Margin="0,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Review Status -->
                        <Border Grid.Column="0" 
                                Style="{StaticResource StatusCard}"
                                Background="#44FFB74D"
                                CornerRadius="6,0,0,6"
                                Margin="0,0,1,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                           Text="&#xE7BA;" 
                                           FontSize="20"
                                           Foreground="#FFB74D"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="NeedsReviewCount" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="#FFB74D"
                                           HorizontalAlignment="Center"
                                           Text="0"/>
                                <TextBlock Text="{DynamicResource Main_StatusReview}" 
                                           FontSize="9" 
                                           FontWeight="SemiBold"
                                           Foreground="#CC7A00"
                                           HorizontalAlignment="Center"
                                           Opacity="0.8"/>
                            </StackPanel>
                        </Border>

                        <!-- No Label Status -->
                        <Border Grid.Column="1" 
                                Style="{StaticResource StatusCard}"
                                Background="#44E57373"
                                CornerRadius="0"
                                Margin="0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                           Text="&#xE783;" 
                                           FontSize="20"
                                           Foreground="#E57373"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="UnverifiedCount" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="#E57373"
                                           HorizontalAlignment="Center"
                                           Text="0"/>
                                <TextBlock Text="{DynamicResource Main_StatusNoLabel}" 
                                           FontSize="9" 
                                           FontWeight="SemiBold"
                                           Foreground="#CC3300"
                                           HorizontalAlignment="Center"
                                           Opacity="0.8"/>
                            </StackPanel>
                        </Border>

                        <!-- Verified Status -->
                        <Border Grid.Column="2" 
                                Style="{StaticResource StatusCard}"
                                Background="#4481C784"
                                CornerRadius="0,6,6,0"
                                Margin="1,0,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                           Text="&#xE73E;" 
                                           FontSize="20"
                                           Foreground="#81C784"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="VerifiedCount" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="#81C784"
                                           HorizontalAlignment="Center"
                                           Text="0"/>
                                <TextBlock Text="{DynamicResource Main_StatusVerified}" 
                                           FontSize="9" 
                                           FontWeight="SemiBold"
                                           Foreground="#2E7D32"
                                           HorizontalAlignment="Center"
                                           Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Hidden spacer for compatibility -->
                <TextBlock x:Name="SpacerCount" Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Center Content Panel -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
                Padding="12">
            <Border Style="{StaticResource ModernCard}" Padding="0" Margin="0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto"
                             ClipToBounds="True">
                    <local:DrawingCanvas x:Name="drawingCanvas"/>
                </ScrollViewer>
            </Border>
        </Border>

        <!-- Right Panel - Labels & Classes -->
        <Border Grid.Row="1" Grid.Column="2" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Header -->
                    <RowDefinition Height="Auto"/>  <!-- Class Section -->
                    <RowDefinition Height="*"/>     <!-- Labels List -->
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="{DynamicResource Main_LabelsAndClasses}" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- CLASS MANAGEMENT SECTION -->
                <Border Grid.Row="1" Style="{StaticResource ModernCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Section Title -->
                        <TextBlock Grid.Row="0" Text="{DynamicResource Main_Classes}" 
                                   FontSize="13" FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        
                        <!-- Class List -->
                        <ListBox Grid.Row="1" x:Name="ClassListBox"
                                 MaxHeight="140"
                                 Margin="0,0,0,10"
                                 SelectionMode="Single"
                                 SelectionChanged="ClassListBox_SelectionChanged"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Border" 
                                                        Background="Transparent"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" 
                                                                Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" 
                                                                Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Color indicator -->
                                        <Border Grid.Column="0"
                                                Width="4" 
                                                Height="18" 
                                                Background="{Binding ColorBrush}"
                                                CornerRadius="2"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"/>
                                        
                                        <!-- Class name and ID -->
                                        <TextBlock Grid.Column="1" 
                                                   VerticalAlignment="Center">
                                            <Run Text="{Binding Name}" FontWeight="Medium"/>
                                            <Run Text="{Binding ClassId, StringFormat=' (ID: {0})'}" 
                                                 FontSize="10" 
                                                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                        </TextBlock>
                                        
                                        <!-- Edit button -->
                                        <Button Grid.Column="2"
                                                Style="{StaticResource IconButton}"
                                                Click="EditClass_Click"
                                                Tag="{Binding}"
                                                ToolTip="{DynamicResource Main_EditClass}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" 
                                                       Text="&#xE70F;" 
                                                       FontSize="12"
                                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <!-- Class Management Buttons -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Content="{DynamicResource Main_AddClass}" 
                                    Click="AddClass_Click" 
                                    Padding="8,6"
                                    Margin="0,0,4,0"
                                    HorizontalAlignment="Stretch">
                                <Button.ToolTip>
                                    <ToolTip Content="{DynamicResource Main_AddClass}"/>
                                </Button.ToolTip>
                            </Button>
                            <Button Grid.Column="1" 
                                    Content="{DynamicResource Main_Remove}" 
                                    x:Name="RemoveClassButton"
                                    Click="RemoveClass_Click" 
                                    Padding="8,6"
                                    Margin="4,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsEnabled="False">
                                <Button.ToolTip>
                                    <ToolTip Content="{DynamicResource Main_RemoveSelectedClass}"/>
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>

                <!-- LABELS LIST SECTION -->
                <Border Grid.Row="2" Style="{StaticResource ModernCard}" 
                        Padding="0" Margin="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Labels Header -->
                        <Grid Grid.Row="0" Margin="12,12,12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{DynamicResource Main_ImageLabels}" 
                                       FontSize="13" FontWeight="SemiBold" 
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1" 
                                    x:Name="ClearImageClassesButton"
                                    Content="{DynamicResource Main_ClearImageClasses}"
                                    Click="ClearImageClasses_Click"
                                    Padding="8,6"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center">
                                <Button.ToolTip>
                                    <ToolTip Content="{DynamicResource Main_ClearImageClasses}"/>
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                        
                        <!-- Labels ListBox -->
                        <ListBox Grid.Row="1" x:Name="LabelListBox" 
                                 Style="{StaticResource ModernListBox}"
                                 SelectionMode="Single" 
                                 SelectionChanged="LabelListBox_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" 
                                       BasedOn="{StaticResource ImageListItemStyle}"/>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>


        <!-- Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                Padding="12,6"
                Height="32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side: Project info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE8B7;" 
                               FontSize="14"
                               Foreground="#FF9C27B0"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="ProjectNameText" 
                               Text="{DynamicResource Status_NoProject}" 
                               FontWeight="SemiBold"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>

                    <Border x:Name="SaveStatusBorder"
                            Background="#4481C784"
                            CornerRadius="10"
                            Padding="8,3"
                            Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="LastSaveText" 
                                       Text="{DynamicResource Status_AllChangesSaved}" 
                                       Foreground="#81C784"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <TextBlock x:Name="LastSaveTimeText"
                               Text="{DynamicResource Status_NotSavedYet}"
                               Foreground="Gray"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Middle: Current Class Display -->
                <Border Grid.Column="1" 
                        x:Name="CurrentClassBorder" 
                        Background="#44E57373" 
                        BorderBrush="#E57373" 
                        BorderThickness="1"
                        CornerRadius="10" 
                        Padding="8,3"
                        Margin="0,0,16,0">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="3" 
                                Height="12" 
                                x:Name="CurrentClassColorIndicator" 
                                Background="#E57373" 
                                CornerRadius="2"
                                Margin="0,0,6,0" 
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="CurrentClassNameText" 
                                   Text="default" 
                                   FontWeight="SemiBold" 
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <TextBlock Text="{DynamicResource Status_Active}" 
                                   FontSize="9" 
                                   VerticalAlignment="Center" 
                                   Opacity="0.6"/>
                    </StackPanel>
                </Border>

                <!-- Right side: Auto-save indicator -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Background="#4400BCD4"
                            CornerRadius="10"
                            Padding="8,3">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="AutoSaveIndicator"
                                     Width="6" 
                                     Height="6"
                                     Fill="#4CAF50"
                                     VerticalAlignment="Center"
                                     Margin="0,0,6,0"/>
                            <TextBlock x:Name="AutoSaveText"
                                       Text="{DynamicResource Status_AutoSaveEnabled}" 
                                       Foreground="#00BCD4"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>