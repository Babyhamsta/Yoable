<Window x:Class="YoableWPF.ModelManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="YOLO Model Manager"
        Height="450"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="350"
        MinWidth="450">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="YOLO Models" 
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="InfoText"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Model List -->
        <Border Grid.Row="1" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,15">
            <ListBox x:Name="ModelListBox"
                     SelectionMode="Single"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource DefaultListBoxItemStyle}">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding DisplayName}" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding ModelType}"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Warning Text -->
        <TextBlock Grid.Row="2"
                   Text="Note: Each additional model increases processing time. GPU recommended for 3+ models."
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                   FontStyle="Italic"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="AddButton" 
                    Content="Add Model" 
                    Click="AddButton_Click"
                    MinWidth="90"
                    Margin="0,0,10,0"/>
            <Button x:Name="RemoveButton" 
                    Content="Remove Selected" 
                    Click="RemoveButton_Click"
                    MinWidth="110"
                    Margin="0,0,10,0"
                    IsEnabled="False"/>
            <Button x:Name="ClearButton" 
                    Content="Clear All" 
                    Click="ClearButton_Click"
                    MinWidth="80"
                    Margin="0,0,10,0"/>
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Click="CloseButton_Click"
                    MinWidth="80"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>