<UserControl x:Class="YoableWPF.HotkeyInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Key Box Style -->
        <Style x:Key="KeyBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1,1,1,2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="MinWidth" Value="30"/>
        </Style>
        
        <Style x:Key="KeyTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Button x:Name="HotkeyButton"
                Grid.Column="0"
                HorizontalContentAlignment="Stretch"
                Padding="4"
                MinHeight="40"
                Focusable="True"
                IsTabStop="True"
                Click="HotkeyButton_Click"
                GotFocus="HotkeyButton_GotFocus"
                LostFocus="HotkeyButton_LostFocus"
                KeyDown="HotkeyButton_KeyDown"
                KeyUp="HotkeyButton_KeyUp"
                PreviewKeyDown="HotkeyButton_PreviewKeyDown">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="OuterBorder"
                            Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                            <Setter TargetName="OuterBorder" Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                            <Setter TargetName="OuterBorder" Property="BorderThickness" Value="2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            
            <Grid VerticalAlignment="Center">
                <!-- Recording State -->
                <TextBlock x:Name="RecordingTextBlock"
                           Text="Press any key combination..."
                           Margin="8,0"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SystemControlHighlightAccentBrush}"
                           Visibility="Collapsed"
                           VerticalAlignment="Center"/>
                
                <!-- Display Keys -->
                <ItemsControl x:Name="KeysItemsControl"
                              Margin="4,0"
                              VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid x:Name="ItemGrid">
                                <Border x:Name="KeyBorder" Style="{StaticResource KeyBoxStyle}">
                                    <TextBlock Text="{Binding}" Style="{StaticResource KeyTextStyle}"/>
                                </Border>
                                <TextBlock x:Name="PlusTextBlock" 
                                           Text="+" 
                                           Margin="0,0,4,0" 
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Opacity="0.5"
                                           Visibility="Collapsed"/>
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding}" Value="+">
                                    <Setter TargetName="KeyBorder" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="PlusTextBlock" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Empty State -->
                <TextBlock x:Name="EmptyTextBlock"
                           Text="Click to set hotkey"
                           Margin="8,0"
                           Opacity="0.5"
                           Visibility="Collapsed"
                           VerticalAlignment="Center"/>
            </Grid>
        </Button>
        
        <Button x:Name="ClearButton"
                Grid.Column="1"
                Content="âœ•"
                Width="32"
                Height="32"
                Margin="8,0,0,0"
                Padding="0"
                FontSize="14"
                Click="ClearButton_Click"
                ToolTip="{DynamicResource Settings_Hotkey_Clear}"
                Visibility="{Binding HasHotkey, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border" 
                                        Background="Transparent" 
                                        CornerRadius="16"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#22FF0000"/>
                                        <Setter Property="Foreground" Value="Red"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#44FF0000"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>

