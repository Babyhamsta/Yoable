<Window x:Class="YoableWPF.ModelClassMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="配置模型類別映射"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="700">
    
    <Window.Resources>
        <SolidColorBrush x:Key="AccentButtonBrush" Color="{DynamicResource SystemAccentColor}"/>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentButtonBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="配置模型類別映射" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="InfoText"
                               Text="請為模型的每個類別選擇對應的項目類別"
                               Foreground="Gray"
                               TextWrapping="Wrap"/>
                </StackPanel>
                <Button Grid.Column="1"
                        x:Name="LoadClassFileButton"
                        Content="載入類別文件"
                        Click="LoadClassFileButton_Click"
                        Padding="12,6"
                        Margin="8,0,0,0"
                        VerticalAlignment="Top"/>
            </Grid>
        </StackPanel>

        <!-- Mapping List -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
                CornerRadius="6"
                Padding="16"
                Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="MappingList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                    CornerRadius="4"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Model Class Info -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                                        <Border Width="4" 
                                                Height="20" 
                                                Background="#FF9C27B0"
                                                CornerRadius="2"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Center"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding ModelClassName}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="13"/>
                                            <TextBlock Text="{Binding ModelClassId, StringFormat='模型 ID: {0}'}" 
                                                       FontSize="11"
                                                       Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Arrow -->
                                    <TextBlock Grid.Column="1" 
                                               Text="→" 
                                               FontSize="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#FF9C27B0"/>

                                    <!-- Project Class ComboBox -->
                                    <ComboBox Grid.Column="2"
                                              ItemsSource="{Binding ProjectClasses}"
                                              SelectedItem="{Binding SelectedProjectClass, Mode=TwoWay}"
                                              DisplayMemberPath="Name"
                                              MinWidth="200"
                                              Margin="16,0,0,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="4" 
                                                            Height="16" 
                                                            Background="{Binding ColorBrush}"
                                                            CornerRadius="2"
                                                            Margin="0,0,8,0"
                                                            VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DisplayText}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="確定" 
                    Click="OKButton_Click"
                    Style="{StaticResource ModernButton}"
                    MinWidth="100"
                    Margin="0,0,8,0"
                    IsDefault="True"/>
            <Button Content="取消" 
                    Click="CancelButton_Click"
                    MinWidth="100"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

