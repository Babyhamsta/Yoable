<Window x:Class="YoableWPF.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="What's New"
        Width="700" Height="450"
        WindowStartupLocation="CenterScreen"
        Name="ChangelogWin"
        Background="#1E1E1E"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style x:Key="ModernWindowStyle" TargetType="Window">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#333333" 
                                BorderThickness="1" 
                                CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" 
                                        Background="Transparent" 
                                        MouseLeftButtonDown="DragArea_MouseLeftButtonDown"
                                        Height="32">
                                    <TextBlock Text="{TemplateBinding Title}" 
                                               Foreground="#FFFFFF" 
                                               Margin="10,0,0,0" 
                                               VerticalAlignment="Center"
                                               Focusable="False"
                                               IsHitTestVisible="True"/>
                                </Border>
                                <ScrollViewer Grid.Row="1" 
                                              Margin="20"
                                              VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ChangelogStackPanel"/>
                                </ScrollViewer>
                                <Button Grid.Row="2"
                                        x:Name="PART_CloseButton"
                                        Width="120" Height="40"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#FFFFFF"
                                        Click="CloseButton_Click"
                                        HorizontalAlignment="Center"
                                        Margin="0,15,0,15">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="#252525"
                                                    BorderBrush="#555555"
                                                    BorderThickness="2"
                                                    CornerRadius="6"
                                                    Padding="10">
                                                <TextBlock Text="Close"
                                                           Foreground="White"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Focusable="False"
                                                           IsHitTestVisible="True"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF5555"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#8B0A14"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#AA3333"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
