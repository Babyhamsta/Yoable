<Window x:Class="YoableWPF.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="What's New"
        Width="700" 
        Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="500"
        MinHeight="400">

    <Window.Resources>
        <!-- Accent color for buttons (uses system accent) -->
        <SolidColorBrush x:Key="AccentButtonBrush" Color="{DynamicResource SystemAccentColor}"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentButtonBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentButtonBrush}"/>
            <Setter Property="Margin" Value="0,15,0,12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                Padding="24,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE946;" 
                               FontSize="24"
                               Foreground="{DynamicResource AccentButtonBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <TextBlock x:Name="VersionTitle"
                               Text="What's New" 
                               FontSize="22" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Here's what's new in this version:"
                           Foreground="Gray"
                           FontSize="13"/>
            </StackPanel>
        </Border>

        <!-- Changelog Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="24,12">
            <StackPanel x:Name="ChangelogStackPanel"/>
        </ScrollViewer>

        <!-- Footer with Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                Padding="24,16">
            <StackPanel x:Name="ButtonPanel" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <!-- Update Mode Buttons (visible when showing update prompt) -->
                <Button x:Name="UpdateButton"
                        Content="Update Now"
                        Click="UpdateButton_Click"
                        Style="{StaticResource ModernButton}"
                        MinWidth="120"
                        Margin="0,0,8,0"
                        Visibility="Collapsed"/>
                <Button x:Name="NotNowButton"
                        Content="Not Now"
                        Click="NotNowButton_Click"
                        Style="{StaticResource SecondaryButton}"
                        MinWidth="120"
                        Visibility="Collapsed"/>

                <!-- Close Button (visible when just viewing changelog) -->
                <Button x:Name="CloseButton"
                        Content="Close"
                        Click="CloseButton_Click"
                        Style="{StaticResource ModernButton}"
                        HorizontalAlignment="Center"
                        MinWidth="120"
                        Visibility="Visible"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>