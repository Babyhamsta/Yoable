<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Yoable.Desktop.ModelManagerDialog"
        Title="YOLO Model Manager"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        MinHeight="400"
        MinWidth="500">

    <Window.Styles>
        <!-- Modern Button Style -->
        <Style Selector="Button.ModernButton">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.ModernButton:pointerover">
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
        <Style Selector="Button.ModernButton:pressed">
            <Setter Property="Opacity" Value="0.8"/>
        </Style>
        <Style Selector="Button.ModernButton:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <!-- Secondary Button Style -->
        <Style Selector="Button.SecondaryButton">
            <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.SecondaryButton:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
        </Style>

        <!-- Danger Button Style -->
        <Style Selector="Button.DangerButton">
            <Setter Property="Background" Value="#44E57373"/>
            <Setter Property="Foreground" Value="#E57373"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.DangerButton:pointerover">
            <Setter Property="Background" Value="#FFE57373"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.DangerButton:pressed">
            <Setter Property="Background" Value="#FFD32F2F"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.DangerButton:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <!-- Model Card Style -->
        <Style Selector="Border.ModelCard">
            <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- ListBox Item Style -->
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                Padding="24,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ§ "
                               FontSize="24"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <TextBlock Text="YOLO Model Manager"
                               FontSize="20"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="InfoText"
                           Text="No models loaded yet. Click 'Add Model' to load your first YOLO model."
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           FontSize="13"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="24,20">
            <StackPanel>
                <!-- Model List Card -->
                <Border Classes="ModelCard" Padding="0" Margin="0,0,0,16">
                    <ListBox x:Name="ModelListBox"
                             SelectionMode="Single"
                             Background="Transparent"
                             BorderThickness="0"
                             MinHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Grid.Column="0"
                                               Text="ðŸ“Š"
                                               FontSize="16"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding DisplayName}"
                                               FontSize="13"
                                               VerticalAlignment="Center"/>

                                    <Border Grid.Column="2"
                                            Background="#4400BCD4"
                                            CornerRadius="10"
                                            Padding="8,4">
                                        <TextBlock Text="{Binding ModelType}"
                                                   Foreground="#00BCD4"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Warning Card -->
                <Border Background="#44FFB74D"
                        CornerRadius="6"
                        Padding="16">
                    <Grid ColumnDefinitions="Auto,*">
                        <TextBlock Grid.Column="0"
                                   Text="âš ï¸"
                                   FontSize="16"
                                   VerticalAlignment="Top"
                                   Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1"
                                   Text="Each additional model increases processing time. GPU recommended for 3+ models."
                                   Foreground="#CC7A00"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer with Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="AddButton"
                        Content="Add Model"
                        Classes="ModernButton"
                        MinWidth="100"
                        Margin="0,0,8,0"/>
                <Button x:Name="RemoveButton"
                        Content="Remove"
                        Classes="DangerButton"
                        MinWidth="90"
                        Margin="0,0,8,0"
                        IsEnabled="False"/>
                <Button x:Name="ClearButton"
                        Content="Clear All"
                        Classes="DangerButton"
                        MinWidth="90"
                        Margin="0,0,8,0"/>
                <Button x:Name="CloseButton"
                        Content="Close"
                        Classes="SecondaryButton"
                        MinWidth="80"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
